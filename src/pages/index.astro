---
import Layout from "../layouts/Layout.astro";
import DeliverablesGrid from "../components/DeliverablesGrid.astro";
import BrandLogos from "../components/BrandLogos.astro";
import AnimatedText from "../components/AnimatedText.astro";
import FadeIn from "../components/FadeIn.astro";
import StickyContact from "../components/StickyContact.astro";
import ContactSection from "../components/ContactSection.astro";
import Footer from "../components/Footer.astro";

const deliverables = {
  "Strategy & Leadership": [
    "UX & Product Strategy",
    "AI Integration Strategy",
    "Organizational Design for Automation",
    "MarTech and Workflow Optimization",
    "Project Audits & Opportunity Mapping",
    "Team Enablement & Change Facilitation",
    "UX Team Leadership & Mentoring",
    "Cross-Functional Alignment Workshops",
  ],
  "Design & Research": [
    "User Research & Experience Mapping",
    "Information Architecture",
    "User Journeys & User Stories",
    "Design Systems & Component Libraries",
    "Wireframes & Hi-Fidelity Prototypes",
    "Usability Testing & Validation",
    "Visual Design & Interaction Design",
    "UX Writing & Microcopy",
  ],
  "Technology & Execution": [
    "Frontend Development",
    "AI Agent Design & Implementation",
    "Rapid Prototyping (Code & No-Code)",
    "Design–Dev Handoff & Documentation",
    "Accessibility & Performance Optimization",
    "System Integration for Smart Interfaces",
  ],
};

const tools =
  "Agent frameworks · Automation workflows · Claude · Confluence · CSS/SASS · Docker · Figma · Git · GPT · HTML · JavaScript · Jira · LangChain · LLM APIs · Microsoft 365 (Excel, PowerPoint, Teams) · Notion · PHP · Power Platform (Power Automate, Power BI) · Prompt engineering · React · Rive · Slack · Storybook · Supabase  · TypeScript · Unity · Vector DBs · VS Code — and my brain.";

const awards =
  "ADC*E Gold · Automotive Brand Contest Digital · iF DESIGN AWARD · Red Dot 'Best of the Best' · German Design Award Gold · Annual Multimedia Award Gold · Corporate Design Prize · Deutsche Designer Club Award · Art Directors Club, Germany · Deutscher Digital Award · Lovie Award Bronze";
---

<Layout>
  <section class="hero-section" aria-labelledby="main-heading">
    <AnimatedText class="name" delay={0} immediate={true}>
      <p>Christoph Beringer · Freelance UX Leader & Technologist</p>
    </AnimatedText>
    <AnimatedText delay={600} immediate={true}>
      <h1 id="main-heading">Strategy, Design & Code <br />for the AI Age</h1>
    </AnimatedText>
    <AnimatedText
      class="value-prop"
      delay={900}
      immediate={true}
      highlight={[]}
    >
      <p class="lead">
        I help organizations think better, build faster, and adapt confidently.
        With 15+ years at the intersection of design, engineering, and strategy,
        I don't just shape products — I help transform digital capabilities to
        thrive in an AI-shaped, systems-driven world.
      </p>
    </AnimatedText>
  </section>

  <section class="approach">
    <FadeIn>
      <h2>Crafting Interfaces, Shaping Organizations</h2>
    </FadeIn>
    <FadeIn delay={0.1}>
      <p>
        I design and build digital experiences — and the systems behind them.
        That includes automation roadmaps, AI-informed org strategy, scalable
        design systems, MarTech modernization, and agent-based workflows.
      </p>
    </FadeIn>
  </section>

  <section class="track-record">
    <FadeIn>
      <h2>Proven Impact</h2>
    </FadeIn>
    <FadeIn delay={0.1}>
      <p>
        From startups to global brands, I've helped teams ship better products,
        adopt smarter workflows, and prepare for what's next — with hands-on
        execution and a strategic lens.
      </p>
    </FadeIn>
    <FadeIn delay={0.2}>
      <p>
        Whether I'm leading a UX engagement, coding prototypes, or consulting on
        intelligent systems, I bring deep curiosity, cross-functional fluency,
        and a strong bias for clarity and action.
      </p>
    </FadeIn>
  </section>

  <section class="deliverables-section" aria-labelledby="deliverables-heading">
    <FadeIn>
      <h2 id="deliverables-heading" class="sr-only">
        Services and Deliverables
      </h2>
      <DeliverablesGrid deliverables={deliverables} />
    </FadeIn>
  </section>

  <section class="overview" aria-labelledby="tools-heading">
    <div class="column">
      <FadeIn>
        <h2 id="tools-heading">My Everyday Stack (and Then Some)</h2>
      </FadeIn>
      <FadeIn delay={0.1}>
        <p class="tools-content">{tools}</p>
      </FadeIn>
    </div>
  </section>

  <FadeIn>
    <BrandLogos />
  </FadeIn>

  <section class="overview" aria-labelledby="awards-heading">
    <div class="column">
      <FadeIn>
        <h2 id="awards-heading">Certified by People in Blazers</h2>
      </FadeIn>
      <FadeIn delay={0.1}>
        <p class="awards-content">{awards}</p>
      </FadeIn>
    </div>
  </section>

  <section class="cta-intro">
    <FadeIn>
      <p class="mission">
        <strong
          >Let's build something resilient — and ready for what's next.</strong
        >
      </p>
    </FadeIn>
  </section>

  <ContactSection />

  <StickyContact showAt={0.2} />
  <Footer />
</Layout>
