    }

    // Language toggle
    const langDE = document.getElementById("lang-de");
    const langEN = document.getElementById("lang-en");
    const contentDE = document.getElementById("content-de");
    const contentEN = document.getElementById("content-en");

    langDE?.addEventListener("click", () => {
      langDE.classList.add("active");
      langEN?.classList.remove("active");
      if (contentDE && contentEN) {
        contentDE.style.display = "block";
        contentEN.style.display = "none";
        // Refresh ScrollTrigger to update positions
        ScrollTrigger.refresh();
      }
    });

    langEN?.addEventListener("click", () => {
      langEN.classList.add("active");
      langDE?.classList.remove("active");
      if (contentDE && contentEN) {
        contentDE.style.display = "none";
        contentEN.style.display = "block";
        // Refresh ScrollTrigger to update positions
        ScrollTrigger.refresh();
      }
    });

    // GSAP Animations for Competency Icons
    import { gsap } from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";

    gsap.registerPlugin(ScrollTrigger);

    // Animate Systems Icon (Network nodes pulsing)
    const animateSystems = (iconId: string) => {
      const icon = document.getElementById(iconId);
      if (!icon) return;

      const circles = icon.querySelectorAll("circle");
      const lines = icon.querySelectorAll("line");

      gsap.fromTo(
        circles,
        { scale: 0.8, transformOrigin: "center" },
        {
          scale: 1,
          duration: 1.5,
          ease: "power2.inOut",
          stagger: 0.1,
          repeat: -1,
          yoyo: true,
          scrollTrigger: {
            trigger: icon,
            start: "top 80%",
            end: "bottom 20%",
          },
        }
      );

      gsap.fromTo(
        lines,
        { opacity: 0.3 },
        {
          opacity: 1,
          duration: 1,
          ease: "sine.inOut",
          stagger: 0.15,
          repeat: -1,
          yoyo: true,
        }
      );
    };

    // Animate Data Icon (Charts growing)
    const animateData = (iconId: string) => {
      const icon = document.getElementById(iconId);
      if (!icon) return;

      const bars = icon.querySelectorAll("rect");
      const line = icon.querySelector("polyline");

      gsap.from(bars, {
        scaleY: 0,
        transformOrigin: "bottom",
        duration: 1.2,
        ease: "elastic.out(1, 0.5)",
        stagger: 0.1,
        scrollTrigger: {
          trigger: icon,
          start: "top 80%",
        },
      });

      if (line) {
        gsap.fromTo(
          line,
          { strokeDasharray: 200, strokeDashoffset: 200 },
          {
            strokeDashoffset: 0,
            duration: 1.5,
            ease: "power2.out",
            delay: 0.5,
            scrollTrigger: {
              trigger: icon,
              start: "top 80%",
            },
          }
        );
      }
    };

    // Animate Interface Icon (Window loading)
    const animateInterface = (iconId: string) => {
      const icon = document.getElementById(iconId);
      if (!icon) return;

      const window = icon.querySelector("rect[rx]");
      const line = icon.querySelector("line");
      const circles = icon.querySelectorAll("circle");
      const rects = icon.querySelectorAll('rect:not([rx="4"])');

      gsap.from(window, {
        scale: 0,
        transformOrigin: "center",
        duration: 0.6,
        ease: "back.out(1.5)",
        scrollTrigger: {
          trigger: icon,
          start: "top 80%",
        },
      });

      gsap.from(circles, {
        scale: 0,
        transformOrigin: "center",
        duration: 0.4,
        stagger: 0.1,
        delay: 0.6,
        ease: "back.out(2)",
        scrollTrigger: {
          trigger: icon,
          start: "top 80%",
        },
      });

      gsap.from(rects, {
        scaleX: 0,
        transformOrigin: "left",
        duration: 0.5,
        stagger: 0.15,
        delay: 0.9,
        ease: "power2.out",
        scrollTrigger: {
          trigger: icon,
          start: "top 80%",
        },
      });
    };

    // Animate Tech Icon (Code typing)
    const animateTech = (iconId: string) => {
      const icon = document.getElementById(iconId);
      if (!icon) return;

      const polylines = icon.querySelectorAll("polyline");
      const line = icon.querySelector("line");
      const rect = icon.querySelector("rect");

      gsap.from(rect, {
        scaleY: 0,
        transformOrigin: "top",
        duration: 0.6,
        ease: "power2.out",
        scrollTrigger: {
          trigger: icon,
          start: "top 80%",
        },
      });

      gsap.fromTo(
        polylines,
        { strokeDasharray: 50, strokeDashoffset: 50 },
        {
          strokeDashoffset: 0,
          duration: 0.8,
          stagger: 0.2,
          delay: 0.3,
          ease: "power2.out",
          scrollTrigger: {
            trigger: icon,
            start: "top 80%",
          },
        }
      );

      gsap.from(line, {
        scaleX: 0,
        transformOrigin: "left",
        duration: 0.6,
        delay: 0.5,
        ease: "power2.out",
        scrollTrigger: {
          trigger: icon,
          start: "top 80%",
        },
      });
    };

    // Animate Product Icon (Flowchart building)
    const animateProduct = (iconId: string) => {
      const icon = document.getElementById(iconId);
      if (!icon) return;

      const circles = icon.querySelectorAll("circle");
      const paths = icon.querySelectorAll("path");
      const polyline = icon.querySelector("polyline");

      gsap.from(circles[0], {
        scale: 0,
        transformOrigin: "center",
        duration: 0.5,
        ease: "back.out(2)",
        scrollTrigger: {
          trigger: icon,
          start: "top 80%",
        },
      });

      gsap.fromTo(
        paths,
        { strokeDasharray: 50, strokeDashoffset: 50 },
        {
          strokeDashoffset: 0,
          duration: 0.6,
          stagger: 0.15,
          delay: 0.5,
          ease: "power2.out",
          scrollTrigger: {
            trigger: icon,
            start: "top 80%",
          },
        }
      );

      gsap.from([circles[1], circles[2]], {
        scale: 0,
        transformOrigin: "center",
        duration: 0.5,
        stagger: 0.1,
        delay: 1,
        ease: "back.out(2)",
        scrollTrigger: {
          trigger: icon,
          start: "top 80%",
        },
      });

      if (polyline) {
        gsap.from(polyline, {
          scale: 0,
          transformOrigin: "center",
          duration: 0.4,
          delay: 0.3,
          ease: "back.out(2)",
          scrollTrigger: {
            trigger: icon,
            start: "top 80%",
          },
        });
      }
    };

    // Initialize animations when content is shown
    function initAnimations() {
      setTimeout(() => {
        animateSystems("systems-icon-de");
        animateData("data-icon-de");
        animateInterface("interface-icon-de");
        animateTech("tech-icon-de");
        animateProduct("product-icon-de");

        animateSystems("systems-icon-en");
        animateData("data-icon-en");
        animateInterface("interface-icon-en");
        animateTech("tech-icon-en");
        animateProduct("product-icon-en");
      }, 100);
    }

    // Scroll-triggered background color animations
    function initScrollColors() {
      // Get all main sections (both DE and EN)
      const sections = [
        { selector: ".profile-section", color: "var(--color-profile)" },
        { selector: ".bio-section", color: "var(--color-bio)" },
        {
          selector: ".competencies-section",
          color: "var(--color-competencies)",
        },
        {
          selector: ".partnerships-section",
          color: "var(--color-partnerships)",
        },
        {
          selector: ".selected-projects-section",
          color: "var(--color-projects)",
        },
        { selector: ".value-section", color: "var(--color-value)" },
        { selector: ".cta-section", color: "var(--color-value)" },
      ];

      sections.forEach(({ selector, color }) => {
        // Get all sections matching selector (both DE and EN)
        const sectionElements = document.querySelectorAll(selector);

        sectionElements.forEach((section) => {
          ScrollTrigger.create({
            trigger: section,
            start: "top 60%",
            end: "bottom 40%",
            onEnter: () => {
              // Only animate if this section is visible
              const parentContent = section.closest(".language-content");
              if (parentContent && parentContent.style.display !== "none") {
                gsap.to(document.body, {
                  backgroundColor: color,
                  duration: 0.6,
                  ease: "power2.out",
                });
              }
            },
            onEnterBack: () => {
              // Only animate if this section is visible
              const parentContent = section.closest(".language-content");
              if (parentContent && parentContent.style.display !== "none") {
                gsap.to(document.body, {
                  backgroundColor: color,
                  duration: 0.6,
                  ease: "power2.out",
                });
              }
            },
          });
        });
      });
    }

    // Initialize animations after content is shown
    if (isAuthenticated) {
      initAnimations();
      initScrollColors();
    } else {
      // Initialize after password is entered
      const originalShowContent = showContent;
      showContent = function () {
        originalShowContent();
        initAnimations();
        initScrollColors();
      };
    }
  </script>
</Layout>
