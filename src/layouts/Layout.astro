---
interface Props {
  title?: string;
  description?: string;
}

const { 
  title = "Christoph Beringer - Freelance User Experience Architect, Interaction Designer",
  description = "UX Professional, Product Designer and Problem Solver with over 12 years of experience"
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div id="content" class="animate fadeInUp">
      <slot />
    </div>
  </body>
</html>

<style is:global>
  :root {
    --text-color: #333;
    --soft-color: #666;
  }
  
  html,
  body {
    margin: 0;
    padding: 0;
    font-family: system-ui, sans-serif;
    color: var(--text-color);
    background: #fff;
  }
  
  #content {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
  }
  
  a {
    color: var(--text-color);
    text-decoration: none;
  }
  
  a:hover {
    text-decoration: underline;
  }
  
  .overview {
    display: flex;
    margin: 2rem 0;
  }
  
  @media (max-width: 600px) {
    .overview {
      flex-direction: column;
    }
  }
  
  .animate {
    animation-duration: 1s;
    animation-fill-mode: both;
  }
  
  .fadeInUp {
    animation-name: fadeInUp;
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translate3d(0, 20px, 0);
    }
    to {
      opacity: 1;
      transform: translate3d(0, 0, 0);
    }
  }
</style>
