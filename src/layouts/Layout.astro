---
import Header from '../components/Header.astro';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Christoph Beringer - Freelance User Experience Architect, Interaction Designer",
  description = "UX Professional, Product Designer and Problem Solver with over 12 years of experience"
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
    <title>{title}</title>
  </head>
  <body>
    <div id="content" class="animate fadeInUp">
      <Header />
      <slot />
    </div>
  </body>
</html>

<style is:global>
  :root {
    --text-color: #333;
    --soft-color: #666;
  }
  
  html,
  body {
    margin: 0;
    padding: 0;
    font-family: 'Inter', system-ui, sans-serif;
    font-size: 18px;
    line-height: 1.6;
    color: var(--text-color);
    background: #fff;
  }

  h1 {
    font-size: 3rem;
    line-height: 1.2;
    font-weight: 600;
  }

  h2 {
    font-size: 2.25rem;
    line-height: 1.3;
    font-weight: 500;
  }

  h3 {
    font-size: 1.5rem;
    line-height: 1.4;
    font-weight: 500;
  }

  p {
    font-size: 1.125rem;
    line-height: 1.6;
  }
  
  #content {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
  }
  
  a {
    color: var(--text-color);
    text-decoration: none;
  }
  
  a:hover {
    text-decoration: underline;
  }
  
  .overview {
    display: flex;
    margin: 2rem 0;
  }
  
  @media (max-width: 600px) {
    .overview {
      flex-direction: column;
    }
  }
  
  .animate {
    animation-duration: 1s;
    animation-fill-mode: both;
  }
  
  .fadeInUp {
    animation-name: fadeInUp;
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translate3d(0, 20px, 0);
    }
    to {
      opacity: 1;
      transform: translate3d(0, 0, 0);
    }
  }
</style>
