---
interface Props {
  title: string;
  items: string[];
}

const { title, items } = Astro.props;
---

<div class="column">
  <h4>{title}</h4>
  {
    items.map((item) => (
      <>
        {item}
        <br />
      </>
    ))
  }
</div>

<style>
  .column {
    flex: 1;
    margin: 0;
  }

  .column h4 {
    font-weight: 800;
    font-size: 1rem;
    margin-bottom: 1.5rem;
  }

  .soft {
    color: #666;
  }

  .title {
    font-weight: bold;
    margin-bottom: 0.5rem;
    display: inline-block;
  }
</style>
